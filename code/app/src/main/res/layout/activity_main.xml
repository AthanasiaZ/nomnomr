<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="550dp"
        android:layout_height="950dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.351"
        app:srcCompat="@drawable/uno" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="-550dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="-400dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/secondshape"
        android:text="Δημιουργια Δωματίου"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="0.472" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginStart="-550dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="-400dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/thirdshape"
        android:text="Εισοδος σε δωματιο"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.996"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="0.472" />

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="-360dp"
        android:layout_marginEnd="-400dp"
        android:background="@drawable/shape"
        android:text="Παραγγελνω σολο"
        android:textSize="20dp"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="296dp"
        android:layout_height="59dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="-620dp"
        android:layout_marginEnd="-400dp"
        android:text="Τραχανίδων 44, Ολοκαίνουργιο Φάληρο"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="-620dp"
        android:layout_marginEnd="-470dp"
        android:layout_marginBottom="-400dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:srcCompat="@drawable/edit" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="252dp"
        android:layout_height="38dp"
        android:layout_marginStart="-400dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="-400dp"
        android:text="Το φαΐ έρχεται, Γιάννη!"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />


</androidx.constraintlayout.widget.ConstraintLayout>




